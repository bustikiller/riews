<%= panel_with_body title: 'Views' do %>
    <%= bootstrap_table do |table|
      table.headers << 'Name'
      table.headers << 'Model'
      table.headers << 'Code'
      table.headers << 'Relationships'
      table.headers << 'Show'
      table.headers << 'Edit'
      table.headers << 'Destroy'

      @views.each do |view|
        table.rows << [
            view.name,
            view.model,
            view.code,
            view.relationships.pluck(:name).join(', '),
            link_to('Show view', view_path(view)),
            link_to('Edit view', edit_view_path(view)),
            link_to('Destroy view', view, method: :delete, data: { confirm: 'Are you sure?' })
        ]
      end
    end %>
    <%= link_to 'New View', new_view_path %>

<% end %>

